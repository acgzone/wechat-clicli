/* 临时 */
.detail-tab {
  width: 100%; padding: 20rpx 0;
  display: flex; flex-direction: row; justify-content: space-around;
  /* box-shadow:0px 15px 10px -15px #ccc; */
  border: 1px solid #000;
}
.detail-tab-item {
  font-size: 28rpx; 
}
.detail-tab-item-active {
  border-bottom: 1rpx solid #000;
  padding-bottom: 10rpx;
}
.detail-Pane {

}
.detail-info {
  display: grid;
  grid-template-columns: 30% 70%;
  grid-template-rows: auto;
}
.detail-info .detail-info-img {
  width: 100%; height: 300rpx; 
  background: red;
}
.detail-info .detail-info-right {
  display: flex; flex-direction: column;
}
.detail-info-right .detail-info-right-title {
  font-size: 30rpx; font-weight: 600;
}
.detail-info-right .detail-info-right-see {
  display: flex; flex-direction: row;
}
.detail-info-right-see .detail-info-right-see-icon {
  width: 32rpx; height: 32rpx;
  background: sandybrown;
}
