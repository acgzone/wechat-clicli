.slide-bar {
  margin-top: 70rpx;
}
.slide-bar .slide-bar-scroll {
  width: 100%; white-space:nowrap; overflow:hidden; text-overflow:ellipsis;
  margin: 0 auto;
}
.slide-bar-scroll .slide-bar-scroll-item {
  display: inline-block; padding: 0 30rpx;
  font-size: 30rpx; color: hsl(221, 15%, 37%);
  
}
.slide-bar-scroll-item .on {
  color: #2db7f5; border-bottom: 3rpx solid #2db7f5;
  font-weight: 600; padding-bottom: 10rpx;
}


/* 内容区域临时 */
.sideItem {
  margin: 10rpx 0;
}
swiper {
  height: 350rpx;
}
.swiper .swiper-item {
  display: grid;
  grid-template-rows: auto;
  grid-template-columns: repeat(5,1fr);
  justify-items: center;
}
.swiper-item .swiper-item-content {
  display: flex; flex-direction: column;
}
.swiper-item-content .swiper-item-content-img {
  width: 100rpx; height: 100rpx; 
  border-radius: 50%; background: red;
}
.swiper-item-content .swiper-item-content-title {
  width: 102rpx;
  font-size: 26rpx; padding: 10rpx 0;
  overflow: hidden; text-overflow:ellipsis; white-space: nowrap;
}